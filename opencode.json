{
  "$schema": "https://opencode.ai/config.json",
  "snapshot": true,
  "model": "zen/big-pickle",
  "small_model": "opencode/gpt-5-nano",
  "tools": {
    "glob": false,
    "mgrep": true,
    "todoread": true,
    "todowrite": true
  },
  "mcp": {
    "MCP_DOCKER": {
      "type": "local",
      "command": ["docker", "mcp", "gateway", "run"],
      "enabled": false,
      "timeout": 8000
    },
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp",
      "enabled": true,
      "timeout": 8000
    },
    "morph": {
      "type": "local",
      "command": ["bunx", "@morphllm/morphmcp"],
      "environment": {
      },
      "enabled": true,
      "timeout": 10000
    },
    "mgrep": {
      "type": "local",
      "command": ["mgrep", "mcp"],
      "enabled": true,
      "timeout": 5000
    },
    "memory": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "environment": {
        "MEMORY_FILE_PATH": "/Users/lorenzo/.config/opencode/memory.jsonl"
      },
      "enabled": true,
      "timeout": 5000
    },
    "filesystem": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/lorenzo/projects",
        "/Users/lorenzo/Documents",
        "/Users/lorenzo/Downloads",
        "/Users/lorenzo/Desktop",
        "/Users/Lorenzo/.config/opencode/"
      ],
      "enabled": true,
      "timeout": 5000
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true,
      "timeout": 10000
    },
    "context7": {
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "@upstash/context7-mcp@latest"
      ],
      "environment": {
        "CONTEXT7_API_KEY": "ctx7sk-4a4494d8-2e8b-4048-b3cf-4d8363db1e44"
      },
      "enabled": true,
      "timeout": 8000
    }
  }
}
